{
  "name": "bhala",
  "version": "2.0.2",
  "license": "MIT",
  "description": "A pretty (!), powerful and customizable logging library for Node.js.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "engine": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rm -Rf ./dist && rollup -c",
    "build:watch": "rollup -cw",
    "dev": "yarn build && concurrently \"yarn build:watch\" \"yarn dev:simulate\"",
    "dev:simulate": "nodemon --delay 2.5 --watch ./dist --watch ./examples/demo.js ./examples/demo.js",
    "prepare": "husky install",
    "test": "yarn test:lint",
    "test:lint": "eslint . --ext .js,.ts"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "node-emoji": "^1.11.0"
  },
  "devDependencies": {
    "@ivangabriele/commitlint-config": "1.0.1",
    "@ivangabriele/eslint-config-typescript-base": "2.0.0",
    "@ivangabriele/prettier-config": "1.1.0",
    "@ivangabriele/semantic-release-config-dist": "1.0.3",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/node": "16.11.7",
    "@types/node-emoji": "1.8.1",
    "@types/prettier": "2.4.2",
    "@types/shelljs": "0.8.9",
    "concurrently": "6.4.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "nodemon": "2.0.15",
    "rimraf": "3.0.2",
    "rollup": "2.60.0",
    "rollup-plugin-node-polyfills": "0.2.1",
    "shelljs": "0.8.4",
    "typescript": "4.4.4",
    "wait-on": "6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@ivangabriele/prettier-config",
  "release": {
    "extends": "@ivangabriele/semantic-release-config-dist"
  },
  "homepage": "https://github.com/ivangabriele/bhala#readme",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/bhala.git"
  },
  "author": {
    "name": "Ivan Gabriele",
    "email": "ivan.gabriele@gmail.com",
    "url": "https://www.ivangabriele.com"
  },
  "keywords": [
    "cli",
    "color",
    "coloured",
    "console",
    "log",
    "logs",
    "logger",
    "logging",
    "print",
    "terminal"
  ]
}
